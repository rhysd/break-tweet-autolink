{
  "name": "Unlink Tweet",
  "version": "0.1",
  "description": "Break autolinks such as URLs in selected tweet text",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "clipboardRead",
    "contextMenus",
    "storage",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://mobile.twitter.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "page_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}

{
  "name": "Unlink Tweet",
  "version": "0.2.0",
  "description": "Break autolinks such as URLs in selected tweet text",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "clipboardRead",
    "contextMenus",
    "storage",
    "declarativeContent"
  ],
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "96": "icon/icon-96.png",
    "128": "icon/icon-128.png",
    "256": "icon/icon-256.png"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://mobile.twitter.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/icon-16.png",
      "32": "icon/icon-32.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
